<h3>{{viewTitle}}</h3>

<form action="/owner/customersub" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{customer._id}}">
    <div class="form-group">
        <label>Email Id</label>
        <input type="email" class="form-control" name="emailid" placeholder="Email Id" value="{{customer.emailid}}">
    </div>
    <div class="text-danger">
        {{customer.emailidError}}</div>
    <!-- <div class="form-group">
        <label>Customer ID</label>
        <input type="text" class="form-control" name="customerid" placeholder="Customer ID" value="{{employee.fullName}}">
        <div class="text-danger">
            {{employee.fullNameError}}</div>
    </div> -->
    <!-- <div class="form-group">
        <label>Customer Password</label>
        <input type="password" class="form-control" name="customerpassword" placeholder="Customer Password" value="{{customer.customerpassword}}">
        <div class="text-danger">
            {{customer.customernameError}}</div>
    </div> -->
    <div class="form-row">
        <div class="form-group col-md-6">
          <label>First Name</label>
          <input type="text" class="form-control" name="firstname" placeholder="First Name" value="{{customer.firstname}}">
          <div class="text-danger">
              {{customer.firstnameError}}</div>
        </div>
        <div class="form-group col-md-6">
            <label>Middle Name</label>
            <input type="text" class="form-control" name="middlename" placeholder="Middle Name" value="{{customer.middlename}}">
        </div>
        <div class="form-group col-md-6">
            <label>Last Name</label>
            <input type="text" class="form-control" name="lastname" placeholder="Last Name" value="{{customer.lastname}}">
            <div class="text-danger">
                {{customer.lastnameError}}</div>
        </div>
        <div class="form-group col-md-6">
            <label>Date Of Birth</label>
            <input type="date" class="form-control" name="dateofbirth" placeholder="Date Of Birth" value="{{customer.dateofbirth}}">
            <div class="text-danger">
                {{customer.dateofbirthError}}</div>
        </div>

        <div class="form-group col-md-6">
            <label>Phone Number</label>
            <input type="text" class="form-control" name="phonenumber" placeholder="Phone Number" value="{{customer.phonenumber}}">
            <div class="text-danger">
                {{customer.phonenumberError}}</div>
        </div>
        <div class="form-group col-md-6">
            <label>Occupation</label>
            <input type="text" class="form-control" name="occupation" placeholder="Occupation" value="{{customer.occupation}}">
            <div class="text-danger">
                {{customer.occupationError}}</div>
        </div>
        <div class="form-group col-md-6">
            <label>Annual Income</label>
            <input type="text" class="form-control" name="annualincome" placeholder="Annual Income" value="{{customer.annualincome}}">
            <div class="text-danger">
                {{customer.annualincomeError}}</div>
        </div>
        <div class="form-group col-md-6">
            <label>Address</label>
            <input type="text" class="form-control" name="address" placeholder="Addresss" value="{{customer.address}}">
            <div class="text-danger">
                {{customer.addressError}}</div>
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"> Save </button>
        <a class="btn btn-secondary" href="/owner/home/customerlist"> View Records </a>
    </div>
</form>
